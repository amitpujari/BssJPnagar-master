<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="squareandcube.bssjpnagar.AboutActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="ABOUT US"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="22sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The School is led by a group of educated, retired and noble minded people. We also support other charitable organizations.

We help children develop a love for questioning and achieve academic excellence to enable them to contribute to our dynamic society.

Children will always remain the focus of any decision taken by Bangalore BSS JPNagar School."
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="22sp"
        android:layout_marginTop="10dp"/>

</LinearLayout>
