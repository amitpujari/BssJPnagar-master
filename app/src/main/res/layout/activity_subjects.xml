<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="squareandcube.bssjpnagar.ClassActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBJECTS"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/class1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. English"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eng"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="View Syallabus"
                android:textSize="18sp"
                android:textAlignment="center"
                android:background="#12da19"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ef900b"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/class2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Hindi"
            android:textSize="20sp"
            tools:ignore="HardcodedText"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textStyle="bold"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hindi"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="View Syllabus"
                android:textSize="18sp"
                android:textAlignment="center"
                android:background="#12da19"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ef900b"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/class3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Science"
            android:textSize="20sp"
            android:layout_weight="1"
            tools:ignore="HardcodedText"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/science"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="View Syllabus"
                android:textSize="18sp"
                android:textAlignment="center"
                android:background="#12da19"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ef900b"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/class4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Math"
            android:textSize="20sp"
            android:layout_weight="1"
            tools:ignore="HardcodedText"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/math"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="View Syllabus"
                android:textSize="18sp"
                android:textAlignment="center"
                android:background="#12da19"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ef900b"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/class5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Social Science"
            android:textSize="20sp"
            tools:ignore="HardcodedText"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/social"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="View Syllabus"
                android:textSize="18sp"
                android:textAlignment="center"
                android:background="#12da19"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </LinearLayout>





</LinearLayout>
